---
const {name,image,position,email} = Astro.props;

---


<div class="councilpic">
    <div class="image-container">
        <img src={image} />
        <p class="position">{position}</p>
        { email &&
        <div class="overlay">
            <p class="email">{email}</p>
        </div>
        }
    </div>
    <p class="name">{name}</p>
</div>

<style>
    .councilpic{
        margin:30px;
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 300px;
        position: relative;
    }

    .image-container{
        position:relative;
    }

    img{
        height:300px;
        width:250px;
        object-fit: cover;
        display: block;
    }

    .position {
        position: absolute;
        color: white;
        background-color: rgba(0, 0, 0, 0.6);
        top: 0px;
        right: 0px;
        height: 30px;
        padding: 2px 6px;
        font-size: 20px;
        margin: 0px;
    }

    .name{
        color: white;
        font-size: 30px;
        margin: 10px;
        text-align: center;
        font-family: "Jost" , sans-seriff;
    }

    .overlay{
        position:absolute;
        bottom:0px;
        left:0px;
        width:100%;
        height: 0%;
        background: rgba(0, 0, 0, 0.6);
        transition: height 0.8s ease;
        display: flex;
        justify-content: center;
        align-items: center;
        pointer-events: none;
    }
    .image-container:hover .overlay{
        height: 100%
    }

    .image-container:hover .email{
        opacity: 1;
        transform: translateY(0);
    }

    .email{
        opacity: 0;
        transform: translateY(20px);
        color: white;
        margin-bottom:20px;
        font-size: 15px;
        font-family: "Jost" , sans-serif;
        transition: opacity 0.4s ease 0.4s, transform 0.4s ease 0.4s;
    }
</style>