---
const {name,image,position} = Astro.props;

---


<div class="councilpic">
    <div class="image-container">
        <img src={image} />
        <p class="position">{position}</p>
    </div>
    <p class="name">{name}</p>
</div>

<style>
    .councilpic{
        margin:30px;
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 300px;
        position: relative;
    }

    .image-container{
        position:relative;
    }

    img{
        height:300px;
        width:250px;
        object-fit: cover;
        display: block;
    }

    .position {
        position: absolute;
        color: white;
        background-color: rgba(0, 0, 0, 0.6);
        top: 0px;
        right: 0px;
        height: 30px;
        padding: 2px 6px;
        font-size: 20px;
        margin: 0px;
    }

    .name{
        color: white;
        font-size: 30px;
        margin: 10px;
        text-align: center;
        font-family: "Jost" , sans-seriff;
    }
</style>